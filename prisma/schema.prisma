generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Movie {
  id Int @id @map("_id")
  title String
  poster_path String
  genre String
  release_year Int
  country String
  runtime Int
  score Float
  budget Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
